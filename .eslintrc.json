{
    "extends": ["airbnb-base", "plugin:jest/recommended"],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": ["jest"],
    "rules": {
        "no-console": 0,
        "comma-dangle": "off",
        "space-before-function-paren": [2, "always"],
        "no-underscore-dangle": [2, { "allow": ["_id"] }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}